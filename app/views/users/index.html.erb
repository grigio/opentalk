<h1>Utenti</h1>

<div id="users-list">
  <% @users.each do |user| %>
  <div style="float:left;">
    <img src="<%= profile_img(user) %>" style="height:25px;" alt="<%= user.display_name %>" />
  </div>
  <% end %>
</div>

<table>
  <tr>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

