<% talks.reverse.each do |talk| %>
<div class="row talk-<%= talk.status %>"
     style="border-bottom: 1px solid #DDD; margin-top: 4px;">
  <div class="span1">
    <%= render 'users/user_profile_mini', :user => talk.user %>
  </div>
  <div class="span11">
    <a href="<%= talk_url(talk) %>">
    <h3 style="margin-top: 0px; margin-bottom: .5em; margin-right: .5em; line-height: .9em;"><%= talk.title %></h3></a>
    <span><i class="icon-user"></i> <%= talk.votes_count + 1  %></span>
    <span><i class="icon-comment"></i> <%= talk.comments.count  %></span>
    <%= talk.user.display_name %>
  </div>
</div>
<% end %>